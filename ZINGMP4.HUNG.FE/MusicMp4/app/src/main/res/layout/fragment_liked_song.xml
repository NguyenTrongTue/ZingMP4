<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Fragments.LikedSongFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Liked Song"
    android:fontFamily="@font/circular_std_font"
    android:textSize="30dp"
    android:paddingLeft="70px"
    android:textColor="@color/white"/>

    <GridView
        android:layout_marginTop="30dp"
        android:paddingLeft="70px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/like_song_grid_view"
        android:verticalSpacing="70px"
        android:horizontalSpacing="70px"
        android:paddingRight="70px"
        android:layout_marginBottom="70px"
        android:scrollbars="none"
        android:numColumns="2"
        android:stretchMode="columnWidth"/>




</LinearLayout>