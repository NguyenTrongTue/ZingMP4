<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/new_playlist_bottom_bg"
    android:layout_height="700dp">

    <ImageView
        android:id="@+id/new_pl_close"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/baseline_close_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:focusedSearchResultHighlightColor="@color/white"
            android:textFontWeight="700"
            android:textSize="18dp"
            android:text="Give your playlist a name"/>
        <EditText
            android:id="@+id/pls_name_field"
            android:gravity="center"
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:textSize="30dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_height="80dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pls_btn_add"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/button_green"
            android:text="Create"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:letterSpacing=".06"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>