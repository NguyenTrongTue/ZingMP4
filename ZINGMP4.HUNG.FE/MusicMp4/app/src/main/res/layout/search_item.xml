<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    android:layout_margin="5dp"
    android:paddingLeft="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/s_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/queen2"
            app:layout_constraintTop_toTopOf="@+id/item_constraint"
            app:layout_constraintLeft_toLeftOf="@+id/item_constraint"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/s_image"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/s_song_name"
                android:gravity="bottom"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Song name"
                android:textFontWeight="700"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/s_singer"
                android:textColor="@color/singer_name_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="top"
                android:text="singer"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/s_more"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/item_constraint"
            android:src="@drawable/ic_menu_dots"
            app:layout_constraintRight_toRightOf="@id/item_constraint"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>