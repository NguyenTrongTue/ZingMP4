<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_constraint"
    android:layout_margin="5dp"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/s_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/queen2"
        app:layout_constraintTop_toTopOf="@+id/item_constraint"
        app:layout_constraintLeft_toLeftOf="@+id/item_constraint"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/s_image"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/s_song_name"
            android:gravity="bottom"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Song name"
            android:textFontWeight="700"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/s_singer"
            android:textColor="@color/singer_name_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="top"
            android:text="singer"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/insert_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="@id/item_constraint"
        android:src="@drawable/ic_square_plus"
        app:layout_constraintRight_toRightOf="@id/item_constraint"
        />
</androidx.constraintlayout.widget.ConstraintLayout>