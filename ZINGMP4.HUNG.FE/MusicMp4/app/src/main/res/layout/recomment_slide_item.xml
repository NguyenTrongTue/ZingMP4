<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:clickable="true"
    android:layout_width="500px"
    android:layout_height="650px">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="500px"
        android:layout_height="500px"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="17dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/image_song"
            android:layout_width="500px"
            android:layout_height="500px"
            android:foreground="@drawable/foreground"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/queen1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="500px"
        android:layout_height="150px"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/card_image"
        app:layout_constraintLeft_toLeftOf="@+id/card_image">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="500px"
            android:layout_height="100px"
            android:fontFamily="@font/circular_std_font"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:text="Bohemian Rhapsody"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/singer_name"
            android:layout_width="500px"
            android:layout_height="50px"
            android:singleLine="true"
            android:fontFamily="@font/circular_std_font"
            android:gravity="center"
            android:ellipsize="end"
            android:text="Queen"
            android:textColor="@color/singer_name_color"
            android:textSize="18dp"></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>